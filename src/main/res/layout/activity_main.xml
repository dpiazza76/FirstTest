<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Login_Text_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/Login_Text_Title"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/Login_Text_UserEmail"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Login_Text_UserEmail"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:background="@drawable/custom_boxtext"
        android:ems="10"
        android:hint="@string/Login_Text_UserEmail"
        android:inputType="textEmailAddress"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login_Text_Title" />

    <EditText
        android:id="@+id/Login_Text_Password"
        android:layout_width="294dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:background="@drawable/custom_boxtext"
        android:ems="10"
        android:hint="@string/Login_Text_Password"
        android:inputType="textPassword"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login_Text_UserEmail" />

    <Button
        android:id="@+id/Login_Btn_Next"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:text="@string/Login_Btn_Next"
        app:layout_constraintEnd_toEndOf="@+id/Login_Text_Password"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/Login_Text_Password"
        app:layout_constraintTop_toBottomOf="@+id/Login_Text_Password" />

</androidx.constraintlayout.widget.ConstraintLayout>